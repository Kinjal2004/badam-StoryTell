generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Story {
  id        String   @id @default(uuid())
  title     String
  content   String
  likes     Int
  tag       String
  liked     Boolean
  author    String   @default("arya")
  createdAt DateTime @default(now())
}

model User {
  id           String   @id @default(uuid())
  likedPosts   String[] @default([])
  name         String
  profilePhoto String
}
